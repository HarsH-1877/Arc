# Production Environment Configuration Template
# Copy this to .env and fill in your production values

# Server
PORT=5000
NODE_ENV=production

# Database - Get this from Railway/Neon
DATABASE_URL=postgresql://user:password@host:port/database

# JWT - Generate a strong secret for production
JWT_SECRET=your_production_jwt_secret_here
JWT_EXPIRES_IN=7d

# Cron Jobs
SYNC_CRON_SCHEDULE=0 0 * * *

# Google OAuth - Use your existing credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=https://your-backend-url.railway.app/api/auth/google/callback

# Frontend URL - Your Vercel deployment URL
FRONTEND_URL=https://your-app.vercel.app
